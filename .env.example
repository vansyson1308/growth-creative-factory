# -------------------------
# Core provider (optional)
# -------------------------
# Required only for `--mode live`.
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# -------------------------
# Meta Ads connector (optional)
# -------------------------
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=act_1234567890
META_APP_ID=
META_APP_SECRET=
META_ACTION_PRIORITY=purchase,lead,complete_registration

# -------------------------
# Google Ads connector (optional)
# -------------------------
GCF_GOOGLE_ADS_DEVELOPER_TOKEN=
GCF_GOOGLE_ADS_CLIENT_ID=
GCF_GOOGLE_ADS_CLIENT_SECRET=
GCF_GOOGLE_ADS_REFRESH_TOKEN=
GCF_GOOGLE_ADS_CUSTOMER_ID=
GCF_GOOGLE_ADS_LOGIN_CUSTOMER_ID=
GCF_GOOGLE_ADS_YAML=google-ads.yaml

# OAuth helper fallback names used by scripts/google_ads_oauth.py
GCF_GOOGLE_CLIENT_ID=
GCF_GOOGLE_CLIENT_SECRET=

# -------------------------
# Google Sheets connector (optional)
# -------------------------
# Absolute path to service-account JSON file.
GCF_GOOGLE_CREDS_JSON=/absolute/path/to/service-account.json
# Optional fallback used by Google SDKs.
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

# -------------------------
# Local paths (optional overrides)
# -------------------------
GCF_INPUT_PATH=examples/ads_sample.csv
GCF_OUTPUT_DIR=output
GCF_MEMORY_PATH=memory/memory.jsonl
GCF_CACHE_PATH=.cache/llm_cache.sqlite
